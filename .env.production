# Production environment configuration
# Rename this file to .env and configure with your actual values

# API Key for CAPTCHA solving service (optional)
CAPTCHA_API_KEY=

# Default download directory (should be absolute path)
DOWNLOAD_DIR=/var/www/4KVideoReaper/downloads

# Default proxy (optional)
DEFAULT_PROXY=

# Aria2 settings
ARIA2_PATH=aria2c
ARIA2_MAX_CONNECTIONS=8
ARIA2_SPLIT=8
ARIA2_ENABLED=true

# yt-dlp settings
YTDLP_FORMAT=bestvideo+bestaudio/best
YTDLP_PREFERRED_CODEC=mp4

# Batch settings
BATCH_MAX_CONCURRENT=5

# Web server settings
WEB_HOST=0.0.0.0
WEB_PORT=8000
WEB_WORKERS=4

# Security settings
SECRET_KEY=generate_a_random_secure_key_here
ALLOWED_HOSTS=4kvideoreaper.com,www.4kvideoreaper.com

# Set to 'production' for production environment
ENVIRONMENT=production

# Log settings
LOG_LEVEL=INFO
LOG_DIR=/var/log/4kvideoreaper
